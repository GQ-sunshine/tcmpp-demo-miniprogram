.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.dialog-container {
  width: 70%;
  background-color: #fff;
  border-radius: 10px;
}
.dialog-container-item {
  padding: 10px 25px;
}
.dialog-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}
.dialog-input-item {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 12px;
  margin-bottom: 10px;
}
.dialog-input-name {
  font-size: 12px;
  text-align: center;
  word-wrap: normal;
}
.dialog-input {
  width: 60%;
  height: 25px;
  line-height: 25px;
  text-align: start;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 5px;
}

.dialog-buttons {
  border-top: 1px solid #ccc;
  display: flex;
  justify-content: space-evenly;
}

.dialog-button {
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #eee;
  color: #000;
  text-align: center;
  font-size: 14px;
}
.dialog-button-hover{
  background-color: rgba(238, 238, 238, 0.658);
}
.dialog-button:first-of-type{
  border-end-start-radius: 10px;
  border-right: 1px solid #ccc;
}
.dialog-button:last-of-type{
  border-end-end-radius: 10px;
}