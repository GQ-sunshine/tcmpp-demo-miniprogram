/**index.wxss**/
.qapm-container {
  height: 150px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50px 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
}

.btn-box {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.qapm-btn {
  justify-content: center;
  height: 50px;
  text-align: center;
  margin-top: 25px;
  width: 50%;
  line-height: 50px;
  margin-left: 25%;
  border: 1px gray solid;
  border-radius: 4px;
}


.title {
  width: 100px;
}

.item_container {
  /* border-bottom:2px solid; */
  font-size: 14px;
  margin-bottom: 50px;
}

.itemView {
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  height: 20px;
  display: flex;
  justify-content: flex-start;
}

.input {
  width: 100%;
  height: 20px;
}