.page-body-info {
  margin-top: 25px;
  padding: 15px 30px;
  width: auto;
}

.devices_summary {
  padding: 5px;
  font-size: 15px;
}

.device_list {
  height: 150px;
  border-radius: 3px;
  flex: 1;
}

.device_item {
  border-bottom: 1px solid var(--weui-FG-3);
  padding: 5px;
  color: var(--weui-FG-HALF);
}

.device_item_hover {
  background-color: rgba(0, 0, 0, .1);
}

.handle-area {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.handle-area .sup-tag {
  margin: 0 5rpx;
  border: 1rpx solid red;
}

.handle-area button {
  text-align: center;
  width: 160rpx;
  padding: 8rpx 5rpx;
}

.handle-area button.target {
  background: red;
}

.handle-area button.long {
  width: 340rpx;
}