/* packageAPI/pages/media/editor-context/editor-context.wxss */
@import "./assets/iconfont.wxss";

page>view {
  max-width: 100%;
}

.my-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  -webkit-overflow-scrolling: touch;
  /* Inertial scroll */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 4px;
  height: 100px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  border: 1px solid #ECECEC;
  border-top: none;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  overflow-y: scroll;
}

button {
  width: unset !important;
  margin: 2px;
  padding: 0.3em !important;
}